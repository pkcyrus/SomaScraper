<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<GridPane fx:id="main_root" fx:controller="com.pskehagias.soma.ui.ControllerChannelInfo"
          xmlns:fx="http://javafx.com/fxml"
          hgap="10" vgap="5" alignment="BASELINE_CENTER">
    <padding><Insets top="10" bottom="15" left="10" right="10"/></padding>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints prefWidth="100"/>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <Label fx:id="label_channel_name" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
        <ImageView fx:id="icon_image" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="5"
                   fitWidth="120" fitHeight="120"/>
        <Label text="Artists: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="label_channel_artists" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Albums: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="label_channel_albums" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Songs: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="label_channel_songs" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </children>
</GridPane>